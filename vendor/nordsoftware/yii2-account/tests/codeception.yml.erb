actor: Tester
paths:
    tests: codeception
    log: codeception/_output
    data: codeception/_data
    helpers: codeception/_support
settings:
    bootstrap: _bootstrap.php
    colors: true
    memory_limit: 1024M
config:
    test_entry_url: /index.php
modules:
    config:
        Db:
            dsn: 'mysql:host=<%= ENV['DB_HOST'] %>;dbname=account_test'
            user: '<%= ENV['DB_USERNAME'] %>'
            password: '<%= ENV['DB_PASSWORD'] %>'
            dump: codeception/_data/dump.sql
            populate: true
            cleanup: false
